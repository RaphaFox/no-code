{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "inlineSourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}
